@model IEnumerable<CarStore.Models.CarViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div align="right">
    @using (Html.BeginForm())
    {
        <p>
            Szukej: @Html.TextBox("SearchString") <br />
            <input type="submit" value="Sercz" />
        </p>
    }
      
</div>
<div align="right">
@using (Html.BeginForm())
{
    <p>
        Segment: @Html.DropDownList("SelectedSegment", (IEnumerable<SelectListItem>)ViewBag.SegmentList, "All")
        <br />
        <input type="submit" value="Filter" />
    </p>
}
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Available)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Segment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Available)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Segment.CarSegment)
        </td>
